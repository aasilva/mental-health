<h1 class="page-title">{{t 'researchers'}}</h1>

<div class="members-block">
    {{#each i18n.team.researchers}}

        <div class="member">

          {{!-- <img src="{{avatar}}" alt="{{name}} picture" class="member-avatar"> --}}
          <div class="member-avatar" style="background-image:url('{{avatar}}')"></div>

          <div class="member-data">
              <div class="member-name">{{name}}</div>
              <div class="member-organization">{{organization}}</div>
              <div class="member-initials">{{initials}}</div>
              <div class="member-organization-logo" style="background-image:url('{{logo}}')"></div>
          </div>

        </div>

    {{/each}}
</div>

